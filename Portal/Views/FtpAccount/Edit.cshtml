@model RingClone.Portal.Models.FtpAccountEditModel

@Html.BootstrapValidationMessage("")
@using (Html.BeginForm("Edit", "FtpAccount", FormMethod.Post, new { @class = "add-ftp-account-form form-horizontal" }))
{
	@Html.AntiForgeryToken()
	<h2 class="">Edit your FTP account info here</h2>
	<p class="small">This service will extract voice files from your RingCentral account and place them into this account automatically. To get all set up, enter your FTP account credentials here.</p>
	<fieldset>
		<legend>Account Name</legend>
		<div class="form-group">
			<label for="FtpAccountName" class="col-sm-4 control-label">Account Name</label>
			<div class="col-sm-8">
				<input type="text" id="FtpAccountName" class="form-control" placeholder="Ftp Account Name" name="FtpAccountName" value="@Model.FtpAccountName" required>
				<p class="help-block">This is an arbitrary name (of your preference) so you can reference it easily later</p>
			</div>
		</div>
	</fieldset>
	<fieldset>
		<legend>FTP account details</legend>
		<div class="form-group">
			<label for="Uri" class="col-sm-4 control-label">Uri</label>
			<div class="col-sm-8">
				<input type="text" id="Uri" class="form-control" placeholder="ftp://ftp.myaccount.com" name="Uri" value="@Model.Uri" required>
				<p class="help-block">This is the url endpoint for your ftp account</p>
			</div>
		</div>
		<div class="form-group">
			<label for="Username" class="col-sm-4 control-label">Username</label>
			<div class="col-sm-8">
				<input type="text" id="Username" class="form-control" placeholder="Username" name="Username" value="@Model.Username" required>
				<p class="help-block">The username for this FTP account</p>
			</div>
		</div>
		<div class="form-group">
			<label for="Password" class="col-sm-4 control-label">Password</label>
			<div class="col-sm-8">
				<input type="text" id="Password" class="form-control" placeholder="Password" name="Password" value="@Model.Password" required>
				<p class="help-block">The password for this FTP account</p>
			</div>
		</div>
		<input type="hidden" name="FtpAccountId" value="@Model.FtpAccountId" />
	</fieldset>
	<p>
	</p>
	<div>
		<a href="@Url.Action("", "Log")" class="btn btn-lg btn-danger">Cancel</a>
		<button class="btn btn-lg btn-primary pull-right" type="submit">Save</button>
	</div>
}
