@model RingClone.Portal.Models.AdHocTransferModel
@section style {
    <style>
        form {
            margin-top: 24px;
        }
    </style>
}
@Html.BootstrapValidationMessage("")
<h2 class="">Input Your Amazon IAM Credentials for RingClone to Use...</h2>
<span class="small">You'll need to obtain the AccessKeyId and SecretAccessKey from your Amazon IAM user account. Also, make sure your IAM user has full access to at least one bucket. If you need help with this, <a href="@Url.Action("walkthrough", "amazon")", target="_blank">click here</a> to see a walk-through on how to set this up.</span>
<p></p>
<div class="col-md-3"></div>
<div class="col-md-6">
    <section id="loginForm">
        @using (Html.BeginForm("UseAmazon", "AdHocTransfer", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                <div class="form-group">
                    <label for="accessKeyId" class="col-sm-4 control-label">Access Key Id</label>
                    <div class="col-sm-8">
                        <input type="text" id="accessKeyId" class="form-control" placeholder="Access Key Id" name="AccessKeyId" required autofocus>
                    </div>
                </div>
                <div class="form-group">
                    <label for="secretAccessKey" class="col-sm-4 control-label">Secret Access Key</label>
                    <div class="col-sm-8">
                        <input type="password" id="secretAccessKey" class="form-control" placeholder="Secret Access Key" name="SecretAccessKey" required>
                    </div>
                </div>
            </fieldset>
                <p></p>
                <div class="row nav">
                    <div class="col-md-3">
                        <a href="@Url.Action("SelectDestination")" class="btn btn-lg btn-default">Back</a>
                    </div>
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Next</button>
                    </div>
                </div>
        }
    </section>
</div>
<div class="col-md-3"></div>